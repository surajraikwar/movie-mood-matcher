# Application Settings
APP_NAME="Movie Mood Matcher"
APP_VERSION="0.1.0"
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost/moviemoodmatcher

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# External APIs
TMDB_API_KEY=your-tmdb-api-key-here
TMDB_BASE_URL=https://api.themoviedb.org/3
OMDB_API_KEY=your-omdb-api-key-here
OMDB_BASE_URL=http://www.omdbapi.com/

# AI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
EMBEDDING_MODEL=text-embedding-ada-002

# Vector Database (optional for MVP)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=movie-embeddings

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
